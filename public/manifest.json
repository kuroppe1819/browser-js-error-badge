{
  "name": "browser-js-error-badge",
  "version": "0.0.1",
  "description": "browser-console-badge",
  "manifest_version": 3,
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": ["file://*/*", "http://*/*", "https://*/*"],
  "permissions": ["tabs", "storage"],
  "action": {
    "default_title": "BrowserJsErrorBadge",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["file://*/*", "http://*/*", "https://*/*"],
      "run_at": "document_start"
    },
    {
      "js": ["inject.js"],
      "matches": ["file://*/*", "http://*/*", "https://*/*"],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
